<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object id="window" class="GtkWindow">
        <child>
            <object class="GtkHeaderBar" id="headerTitle">
                <property name="title-widget">
                    <object class="GtkBox">
                        <child>
                            <object class="GtkLabel">
                                <property name="label" translatable="yes">My Window</property>
                                <property name="single-line-mode">True</property>
                                <property name="ellipsize">end</property>
                                <style>
                                    <class name="title"/>
                                </style>
                            </object>
                        </child>
                        <child>
                            <object id="titleButton" class="GtkMenuButton">
                                <property name="popover">
                                    <object class="GtkPopoverMenu">
                                        <menu id="app-menu">
                                            <section>
                                                <item>
                                                    <attribute name="label" translatable="yes">_Quit</attribute>
                                                    <attribute name="action">app.quit</attribute>
                                                </item>
                                            </section>
                                        </menu>
                                    </object>
                                </property>
                            </object>
                        </child>
                    </object>
                    
                </property>
            </object>
            
        </child>
        <child>
            <object id="grid" class="GtkGrid">
                
                <child>
                    <object id="label" class="GtkLabel">
                        <property name="label">Hello</property>
                        <layout>
                            <property name="column">0</property>
                            <property name="row">1</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object id="entryArea" class="GtkEntry">
                        <layout>
                            <property name="column">0</property>
                            <property name="row">2</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object id="submit" class="GtkButton">
                        <property name="label">Submit</property>
                        <layout>
                            <property name="column">1</property>
                            <property name="row">2</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object id="userText" class="GtkLabel">
                        <layout>
                            <property name="column">0</property>
                            <property name="row">3</property>
                        </layout>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>